# Caddie.sh CSV ToolsVersion Management
# This file provides encapsulated version management functions

source "$HOME/.caddie_modules/.caddie_cli"

# Private version variable
CADDIE_CSV_TOOLS_VERSION="1.1"

# Function to get the current version
function caddie_csv_tools_version_get() {
    caddie cli:blue "$CADDIE_CSV_TOOLS_VERSION"
}

# Function to set a new version
function caddie_csv_tools_version_set() {
    local new_version="$1"
    if [ -n "$new_version" ]; then
        CADDIE_CSV_TOOLS_VERSION="$new_version"
        caddie cli:check "Caddie CSV Tools version set to: $CADDIE_CSV_TOOLS_VERSION"
    else
        caddie cli:red "Error: Please provide a version number"
        return 1
    fi
}

# Function to reset version to default
function caddie_csv_tools_version_reset() {
    CADDIE_CSV_TOOLS_VERSION="1.0"
    caddie cli:check "Caddie CSV Tools version reset to: $CADDIE_CSV_TOOLS_VERSION"
}

# Function to show current version
function caddie_csv_tools_version_show() {
    caddie cli:orange "Caddie CSV Tools version: $CADDIE_CSV_TOOLS_VERSION"
}

# Export functions for external use
export -f caddie_csv_tools_version_get
export -f caddie_csv_tools_version_set
export -f caddie_csv_tools_version_reset
export -f caddie_csv_tools_version_show
